@model List<PP1.Models.Asignatura>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Asignaturas del Cuatrimestre</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Asignaturas del Cuatrimestre</h1>

        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Nombre de Asignatura</th>
                    <th>Profesor</th>
                    <th>Créditos</th>
                    <th>Cuatrimestre</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var asignatura in Model)
                {
                    <tr>
                        <td>@asignatura.NombreAsignatura</td>
                        <td>@asignatura.NombreProfesor</td>
                        <td>@asignatura.Creditos</td>
                        <td>@asignatura.Cuatrimestre</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
